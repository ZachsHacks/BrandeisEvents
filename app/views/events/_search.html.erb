<div class="search hidden-phone hidden-md hidden-sm hidden-xs">
	<form id="search" role="form" action=<%=search_path%> method="get">
		<div class="col-md-4">
			<div class="form-group">

				<input type="text" class="form-control" id="search-complete" placeholder="Search Events by Name or Description" name="event">
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<select class="form-control" name="location" id="location" form="search">
						<option value="all">All Locations</option>
					<%@locations.sort.each do |l|%>
						<option value=<%=l%>><%=l%></option>
					<%end%>
				</select>
				<!-- <label class="sr-only" for="location">Location</label>
				<input type="text" class="form-control" id="location" placeholder="Location" name="location"> -->
			</div>
		</div>
		<div class="col-md-2">
			<div class="form-group">
				<div id='datetimepicker1' class="input-group">
					<input type="date" class="form-control" placeholder="MM/DD/YYYY" name=date>
					<span class="input-group-addon">
						<i class="glyphicon glyphicon-calendar"></i>
					</span>
				</div>
			</div>
		</div>
		<div class="col-md-2 form-group">
			<button type="submit" class="btn btn-default btn-white">Search</button>
		</div>
	</form>
</div>
