<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">RSVPs to <%=@event.name%></h4>
      </div>

      <div class="modal-body">
        <%if @event.rsvps.count<1 %>
        <p>No RSVPs yet, but that doesn't mean no one will be there!</p>
        <%else%>
          <% to_show = rsvps_to_show(@event) %>
          <% to_show.each do |r| %>
          <p>-<%=r%></p>
          <%end%>
          <p><%="-#{I18n.t('anonymity', count: anonymous_rsvps(@event, to_show))}" if anonymous_rsvps(@event, to_show) > 0%></p>
        <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
